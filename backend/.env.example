# Database
MONGODB_URI=mongodb://localhost:27017/moderation-api

# Server Configuration
PORT=5001
NODE_ENV=development

# AI Moderation Keys (Add multiple Gemini keys for load balancing)
GEMINI_KEY_1=your_gemini_api_key_1
GEMINI_KEY_2=your_gemini_api_key_2
